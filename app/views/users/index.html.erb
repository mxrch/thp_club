<br>
<div align="center">

  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
    <% else %>
      <br>
  <% end %>

  <br>
  <h2 style="color:  #f1f1f1">Le carré VIP</h2>
  <br>
  <br>

  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">Numéro</th>
        <th scope="col">Prénom</th>
        <th scope="col">Nom</th>
        <th scope="col">Adresse Email</th>
        <th colspan="4" scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td class="tr-action"><%= link_to 'Voir le profil', user, class: "btn btn-primary"%>
          <% if current_user.id == user.id %>
            <%= link_to 'Modifier', edit_user_path(user), class: "btn btn-success"%>
            <%= link_to 'Supprimer', user, method: :delete, class: "btn btn-danger", data: { confirm: 'Êtes-vous sûr ?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
